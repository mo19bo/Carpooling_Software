    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_Time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/logout2"
            android:text="Travel date"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/logout3"
            android:text="Choose Route"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Price:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3f51b5"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="$ 12"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Your Brief Info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#3f51b5"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#efefef"
        android:ems="10"
        android:hint="no more than 120 words"
        android:textColor="#3f51b5"
        android:textColorHint="#ff80ab"
        android:textSize="16dp" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/logout"
            android:text="Submit"
            android:textColor="#fff" 
            android:onClick="onClick_btn_publish"/>
    </LinearLayout>

